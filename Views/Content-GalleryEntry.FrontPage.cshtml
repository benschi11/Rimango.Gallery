@using System.Collections
@using Orchard.ContentManagement;
@using Orchard.Utility.Extensions;

@{
    if (Model.Title != null)
    {
        Layout.Title = Model.Title;
    }

    Model.Classes.Add("content-item");

    var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();
    Model.Classes.Add(contentTypeClassName);


    var tag = Tag(Model, "article");

    string url = string.Empty;

    if (!string.IsNullOrEmpty(Model.ContentItem.GalleryEntryPart.CoverPicture.FileName))
    {
        url = Url.Content(Model.ContentItem.GalleryEntryPart.CoverPicture.FileName);
    }



    var title = Model.ContentItem.TitlePart.Title;

    var images = Model.ContentItem.GalleryEntryPart.Pictures.MediaParts;

    var count = images.Count;

    Style.Require("Rimango.Gallery.FrontPage");
    Script.Require("PrettyPhoto").AtFoot();
    Style.Require("PrettyPhoto");
    Script.Require("Masonry");


}
@if (images != null && count > 0) {
    <div class="gallery masonry-thumbs responsive clearfix">
        @for (int i = 0; i <= 10; i++) {
            var img = images[i];
            var hero = "";
            if (i == 2) {
                hero = "hero-image";
            }
            <a rel="gallery" class="gallery-item swipebox @hero" href="@Display.ResizeMediaUrl(Path: img.MediaUrl, Width: 1400, Height: 1400)" title="@img.Caption">
                <img class="img-responsive" src="@Display.MediaUrl(Profile: "GalleryFrontPage", Path: img.MediaUrl)" alt="@img.AlternateText" title="@img.Title"/>
            </a>
        }
        <div class="gallery-item link"><h3>Zur Fotogallery >></h3></div>
    </div>

}

@using (Script.Foot()) {
    <script type="text/javascript" charset="utf-8">
        $(function () {
            var $container = $('.gallery');
            $container.imagesLoaded(function () {
                $container.masonry({
                    itemSelector: '.gallery-item',
                    gutter: 0
                });
            });

        });
    </script>

}
